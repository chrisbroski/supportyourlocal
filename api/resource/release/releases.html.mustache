<p><label>Spotify</label><br>
    <input type="text" name="spotify" value="{{formData.spotify}}">

<h3>Video</h3>
<p><label>YouTube</label><br>
    <input type="text" name="youtube" value="{{formData.youtube}}">
<p><label>Facebook</label><br>
    <input type="text" name="fb" value="{{formData.fb}}"> -->

<footer><p><button>Create {{resourceName}}</button></footer>
</form>
</section>

<section class="list">
{{#release}}
<p><a href="{{API_DIR}}/{{resourceName}}/{{id}}">{{pageName}}</a></p>
{{/release}}
</section>

</article>

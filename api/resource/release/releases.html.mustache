<!doctype html>
<html lang="en">
<title>{{resourceNameCap}}s - {{homeName}}</title>
{{{head}}}

<body>
{{{header}}}

<article>
<h1>{{resourceName}}s</h1>

{{#loggedIn}}
<section>
<form method="POST" action="{{API_DIR}}/{{resourceName}}/">

<p><label>Name</label><br>
    <input type="text" name="name" autofocus="autofocus">

<p><label>Release Date</label>*<br>
    <input type="date" name="date" value="{{today}}" required="required">

<p><label>Front Cover</label><br>
    <input type="text" name="cover-front">

<p><label>Back Cover</label><br>
    <input type="text" name="cover-back">

<p><label>Description<br><textarea name="desc"></textarea></p>

<h4>Songs</h4>
<p><select name="initial-song">
<option value="">Select Song</option>
{{#songlist}}
<option value="{{id}}">{{name}}</option>
{{/songlist}}
</select>

<h4>Album Links (if appropriate)</h4>
<p><label>Spotify</label><br>
    <input type="text" name="spotify">
<p><label>Apple Music</label><br>
    <input type="text" name="apple">
<p><label>Amazon Music</label><br>
    <input type="text" name="amazon">
<p><label>YouTube</label><br>
    <input type="text" name="youtube">
<p><label>CD Baby</label><br>
    <input type="text" name="cdbaby">

<p><button>Create {{resourceName}}</button>
</form>
</section>
{{/loggedIn}}

<section>
{{#song}}
<h4><a href="{{API_DIR}}/{{resourceName}}/{{id}}">{{name}}</a></h4>
{{/song}}
</section>

</article>

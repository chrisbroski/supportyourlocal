<!doctype html>
<html lang="en">
<title>{{pageName}} - API - {{homeName}}</title>
{{{head}}}

<body>
{{{header}}}

<article>
<h1>{{pageName}}</h1>

<h5><a href="{{API_DIR}}/">Home</a> &gt; {{pageName}}</h5>

{{#hasError}}
<ul class="msg error">
{{#error}}
<li>{{.}}</li>
{{/error}}
</ul>
{{/hasError}}

{{#hasMsg}}
<ul class="msg">
{{#msg}}
<li>{{.}}</li>
{{/msg}}
{{#link}}
<li><a href="{{href}}">{{text}}</a></li>
{{/link}}
</ul>
{{/hasMsg}}

{{#loggedIn}}
<section>
<form method="POST" action="{{API_DIR}}/{{resourceName}}/">

<p><label>Name</label><br>
    <input type="text" name="name" autofocus="autofocus" value="{{formData.name}}">

<p><label>Release Date</label>*<br>
    <input type="date" name="date" required="required" value="{{formData.date}}">

<p><label>Front Cover</label><br>
    <input type="text" name="cover-front">

<p><label>Back Cover</label><br>
    <input type="text" name="cover-back">

<p><label>Description<br><textarea name="desc">{{formData.desc}}</textarea></p>
<p><label>Credits<br><textarea name="credits">{{formData.credits}}</textarea></p>

<h2>Songs</h2>
<p><select name="initial-song">
<option value="">Select Song</option>
{{#songlist}}
<option value="{{song-id}}">{{song-name}}</option>
{{/songlist}}
</select>

<h2>Album Links <span>(if needed)</span></h2>
<p><label>Spotify</label><br>
    <input type="text" name="spotify" value="{{formData.spotify}}">
<p><label>Apple Music</label><br>
    <input type="text" name="apple" value="{{formData.apple}}">
<p><label>Amazon Music</label><br>
    <input type="text" name="amazon" value="{{formData.amazon}}">
<p><label>YouTube</label><br>
    <input type="text" name="youtube" value="{{formData.youtube}}">
<p><label>CD Baby</label><br>
    <input type="text" name="cdbaby" value="{{formData.cdbaby}}">

<p><button>Create {{resourceName}}</button>
</form>
</section>
{{/loggedIn}}

<section class="list">
{{#release}}
<p><a href="{{API_DIR}}/{{resourceName}}/{{id}}">{{pageName}}</a></p>
{{/release}}
</section>

</article>

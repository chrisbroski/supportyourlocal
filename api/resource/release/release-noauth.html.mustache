<!doctype html>
<html lang="en">
<title>{{pageName}} - {{resourceNameCap}} - API - {{homeName}}</title>
{{{head}}}

<body>
{{{header}}}

<article>
<h1>{{pageName}}</h1>

<h5><a href="{{API_DIR}}/">Home</a> &gt; <a href="{{{API_DIR}}}/{{resourceName}}">{{resourceName}}s</a> &gt; {{pageName}}</h5>

<section class="release">
<h2>{{name}}</h2>
{{#cover-front}}
<img src="/photo/{{cover-front}}" alt="Front cover">
{{/cover-front}}
{{#cover-back}}
<img src="/photo/{{cover-back}}" alt="Back cover">
{{/cover-back}}
<h3>{{date}}</h3>
{{{descHtml}}}
<p><a href="{{releaseLink}}" target="_music">Listen</a></p>
</section>

{{#hasAlbumList}}
<section>
<h2>Album Tracks</h2>
{{#albumList}}
<p><a href="{{{API_DIR}}}/song/{{song-id}}">{{song-name}}</a></p>
{{/albumList}}
</section>
{{/hasAlbumList}}

{{#hasVideo}}
<section>
{{#video.fb}}
<p><a href="{{.}}">Facebook Video</a></p>
{{/video.fb}}
{{#video.youtube}}
<p><a href="{{.}}">YouTube Video</a></p>
{{/video.youtube}}
</section>
{{/hasVideo}}

{{#credits}}
<section>
<h2>Credits</h2>
<pre>{{.}}</pre>
</section>
{{/credits}}

</article>

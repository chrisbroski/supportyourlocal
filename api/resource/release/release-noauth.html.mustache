<!doctype html>
<html lang="en">
<title>{{pageName}} - {{resourceNameCap}} - API - {{homeName}}</title>
{{{head}}}

<body>
{{{header}}}

<article>
<h1>{{pageName}}</h1>

<h5><a href="{{API_DIR}}/">Home</a> {{#resourceName}}&gt; <a href="{{{API_DIR}}}/{{.}}">{{.}}s</a>{{/resourceName}} {{#pageName}}&gt; {{.}}{{/pageName}}</h5>

<section class="release">
{{#upcomingRelease}}
<h2>{{pageName}}</h2>
<h3>Releasing on {{date}}</h3>
{{#cover-front}}
<img src="/photo/{{cover-front}}" alt="Front cover">
{{/cover-front}}
{{/upcomingRelease}}

{{^upcomingRelease}}
<h2>{{pageName}}</h2>
{{#cover-back}}
<img src="/photo/{{cover-back}}" alt="Back cover">
{{/cover-back}}
<h3>{{date}}</h3>
{{{descHtml}}}
{{#releaseLink}}
<p><a href="{{.}}" target="_music">Listen</a></p>
{{/releaseLink}}
{{/upcomingRelease}}
</section>

{{#hasAlbumList}}
<section>
<h2>Album Tracks</h2>
{{#albumList}}
<p><a href="{{{API_DIR}}}/song/{{song-id}}">{{song-name}}</a></p>
{{/albumList}}
</section>
{{/hasAlbumList}}

{{#hasVideo}}
<section>
{{#video.fb}}
<p><a href="{{.}}">Facebook Video</a></p>
{{/video.fb}}
{{#video.youtube}}
<p><a href="{{.}}">YouTube Video</a></p>
{{/video.youtube}}
</section>
{{/hasVideo}}

{{#credits}}
<section>
<h2>Credits</h2>
<pre>{{.}}</pre>
</section>
{{/credits}}

</article>

<!doctype html>
<html lang="en">
<title>{{pageName}} - {{resourceNameCap}} - API - {{homeName}}</title>
{{{head}}}

<body>
{{{header}}}

<article>
<h1>{{pageName}}</h1>

<h5><a href="{{{API_DIR}}}/">Home</a> &gt; <a href="{{{API_DIR}}}/{{resourceName}}">{{resourceName}}s</a> &gt; {{pageName}}</h5>

{{{message-display}}}

<section>
<form method="POST" action="{{{API_DIR}}}/{{resourceName}}/{{id}}">
<input type="hidden" name="method" value="PUT">

<p><label>Name</label>*<br>
    <input type="text" name="name" value="{{name}}" autofocus="autofocus" required="required">

<p><label>Original Artist</label> (If not you)<br>
    <input type="text" name="artist" value="{{artist}}">

<p><label>Duration</label><br>
    <input type="number" name="durationM" min="0" max="120" step="1" value="{{durationM}}"> minutes
    <input type="number" name="durationS" min="0" max="60" step="1" value="{{durationS}}"> seconds
<p><label>Description<br><textarea name="desc">{{desc}}</textarea></p>

<p><label>Genre</label><br>
    <select name="genre1">
        <option value="">Select Main Genre</option>
        {{#genres}}
        <option value="{{name}}"{{{selected}}}>{{name}}</option>
        {{/genres}}
    </select>
<p><label>Sub-genre</label><br>
    <input type="text" name="genre2" value="{{genre2}}">
<p><label>Sub-genre</label><br>
    <input type="text" name="genre3" value="{{genre3}}">

<p><label>Release Date</label><br>
    (Song information will be private until this date.)<br>
    <input type="date" name="releaseDate" value="{{releaseDate}}">

<p><label>Story<br>
    <textarea name="desc">{{story}}</textarea></p>

<p><label>Lyrics<br>
    <textarea name="lyrics">{{lyrics}}</textarea></p>

<footer><p><button>Update {{resourceName}}</button></footer>
</form>
</section>

<section id="media">
<h2>Media</h2>
<form method="POST" action="{{{API_DIR}}}/{{resourceName}}/{{id}}#media">
    <p><input type="url" name="media" value="">
        <select name="type">
            <option value="audio">Audio</option>
            <option value="video">Video</option>
            <option value="blog">Blog / Article</option>
        </select>
    <p><button>Add Media</button>
</form>

<table>
{{#mediaList}}
<tr>
<th><div>{{media-url}}</div></th>
<td>{{media-type}}</td>
<td>
<form method="POST" action="{{{API_DIR}}}/{{resourceName}}/{{id}}#media">
    <input type="hidden" name="method" value="PATCH">
    <input type="hidden" name="index" value="-1">
    <input type="hidden" name="media-index" value="{{media-index}}">
    <button>Ã—</button>
</form>
</td>
</tr>
{{/mediaList}}
</table>
</section>

<section>
<p><a class="button" href="{{{API_DIR}}}/delete?resource={{resourceName}}&id={{id}}">Delete {{resourceName}}</a></p>
</section>

<section class="list">
<h4>Songs</h4>
{{#songs}}
<p><a href="{{API_DIR}}/{{resourceName}}/{{id}}">{{name}}</a></p>
{{/songs}}
</section>

</article>

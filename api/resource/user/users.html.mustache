{{#isMod}}
<section>
<h2>Create User</h2>
<form method="POST" action="/api/user/" enctype="application/x-www-form-urlencoded">
<p><label>Honorific</label><br>
    <input type="text" name="prefix" autofocus="autofocus">
<p><label>*First Name</label><br>
    <input type="text" name="firstName">
<p><label>*Surname</label><br>
    <input type="text" name="surname">
<p><label>*Email</label><br>
    <input type="text" name="email">
<p><label>Company</label><br>
    <input type="text" name="company">
<p><label>Title</label><br>
    <input type="text" name="title">

<p><label>User Type</label><br>
    <select name="userType">
        <option value="attendee">Attendee</option>
        <option value="producer">Producer</option>
        <option value="administrator">Administrator</option>
    </select>

<p><label><input type="checkbox" name="speaker" value="1"> Speaker</label>
    <label><input type="checkbox" name="moderator" value="1"> Moderator</label>
    <label><input type="checkbox" name="vendor" value="1"> Vendor</label>
    <label><input type="checkbox" name="sponsor" value="1"> Sponsor</label>
</p>

<p><label>Image URL</label><br>
    <input type="text" name="imageUrl" value="">

<p><label>Data</label><br>
    <input type="text" name="data" value="">

<p><label>Bio</label><br><textarea name="bio"></textarea>

<p><label>Password</label><br>
    <input type="text" name="password">

<p><button>Create New User</button>
<h6>* Required</h6>
</form>
</section>
{{/isMod}}

{{#users}}
<section>
<h2><a href="/api/user/{{id}}">{{prefix}} {{firstName}} {{surname}}</a></h2>
{{#titleHeader}}
<h3>{{title}}{{comma}}{{company}}
</h3>
{{/titleHeader}}
{{#data}}
<pre>{{.}}</pre>
{{/data}}
<div>{{{bioFormatted}}}</div>
{{#isMod}}
{{#token}}
<p><a href="{{subDir}}/password/{{id}}?token={{token}}">Reset URL</a>
{{/token}}
<!--<p>{{email}}-->
{{/isMod}}
</section>
{{/users}}

</article>

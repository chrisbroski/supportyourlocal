<!doctype html>
<html lang="en">
<title>{{pageName}} - API - {{homeName}}</title>
{{{head}}}

<body id="user-page">
{{{header}}}

<article>
<h1>{{pageName}}</h1>

<h5><a href="{{API_DIR}}/">Home</a> &gt; {{pageName}}</h5>

{{{message-display}}}

{{#loggedIn}}
<section>
<form method="POST" action="{{API_DIR}}/user/" enctype="application/x-www-form-urlencoded">
<p><label>Email</label>*<br>
<input type="text" name="email" required="required" autofocus="autofocus" value="{{formData.email}}">
<p><label>First Name</label><br>
    <input type="text" name="givenName" value="{{formData.givenName}}">
<p><label>Surname</label><br>
    <input type="text" name="surname" value="{{formData.surname}}">
<p><label>Position</label> (Singer, guitarist, lyricist, etc.)<br>
    <input type="text" name="position" value="{{position}}" value="{{formData.position}}">
<p><label>Home City</label><br>
    <input type="text" name="city" value="{{formData.city}}">
<p><label>Home State</label><br>
    <input type="text" name="state" value="{{formData.state}}">
<p><label>Home Country</label><br>
    <select name="country">
        <option value="">Select Country</option>
        {{#countries}}
        <option value="{{code}}"{{{selected}}}>{{name}}</option>{{/countries}}
    </select>

<h2>Photo</h2>
<div class="photos">
<input type="radio" name="photo" value="" id="photo-none"{{{no-photo}}}><label for="photo-none"><img src="{{API_DIR}}/nophoto" alt="No photo"></label>
{{#photos}}<input type="radio" name="photo" value="{{.}}" id="photo-{{.}}"><label for="photo-{{.}}"><img src="/photo/{{.}}"></label>{{/photos}}
</div>

<p>
    <label><input type="checkbox" value="Y" name="admin"> Admin</label>
    <label><input type="checkbox" value="Y" name="bandMember"> Band Member</label>
</p>

<p><label>Bio</label><br><textarea name="bio">{{formData.bio}}</textarea>

<footer><p><button>Create New User</button></footer>
</form>
</section>
{{/loggedIn}}

<section class="list">
{{#user}}
<p><a href="{{API_DIR}}/user/{{id}}">{{userName}}</a>
{{#token}}
(<a href="{{API_DIR}}/password/{{id}}?token={{token}}">Reset URL</a>)
{{/token}}
{{/user}}
</section>

</article>
